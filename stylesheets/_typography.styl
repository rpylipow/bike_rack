html 
  font-size: 62.5% 

body 
  font-size: 1.5rem
  line-height: 1.6
  font-weight: 300
  font-family: "proxima-nova", sans-serif
  color: $baseTextColor

h1, h2, h3, h4, h5, h6, 
h1 a, h2 a, h3 a, h4 a, h5 a, h6 a, 
  font-family: "proxima-nova-soft", sans-serif
  margin-top: 0
  margin-bottom: 2rem
  font-weight: 700
  letter-spacing: 0
    
h1  
  font-size: 4.0rem 
  line-height: 1.2 
h2  
  font-size: 3.0rem 
  line-height: 1.3  
h3  
  font-size: 1.8rem 
  line-height: 1.5  

// Larger than phablet
@media (min-width: 550px) 
  h1  
    font-size: 4.0rem 
  h2  
    font-size: 3.0rem 
  h3  
    font-size: 1.8rem 

p 
  margin-top: 0 

a
  text-decoration: none  

a small 
  font-size: 1.2rem
  line-height: 1.5
