@import '../_variables'
@import '../_mixins'
@import '../_typography'
@import '_header'

body
  background: white

.loading-spinner
  display: none 
  font-size: 40px 
  
  &.active
    display: inline-block 

main
  padding-top: 40px
  
  .map
    width: 100%
    height: 100vh
    
  .spinner  
    display: none
    position: absolute
    top: 50%
    left: 50%
    font-size: 5rem
    color: #ff0000
    
    &.visible
      display: block
  
  .about 
    display: none
    position: absolute
    bottom: 10px
    left: 20px
    color: $redHex
    text-transform: uppercase    
